<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Pink_white"
    android:orientation="vertical"
    tools:context=".home_screen_desing">


    <ScrollView
        android:id="@+id/nsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/Item1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="179dp"
                android:fontFamily="@font/kodchasan"
                android:text="Find Your desired Items"
                android:textColor="#453536"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.32"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/recommended_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended Items For You"
                android:textColor="#2FA090"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/Item1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Item1"
                app:layout_constraintTop_toBottomOf="@+id/Item1" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recommended_items">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recommended_items"
                    tools:listitem="@layout/recommended">


                </androidx.recyclerview.widget.RecyclerView>

            </ScrollView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/kodchasan"
                android:text="Trending Deals"
                android:textColor="#2FA090"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/recommended_items"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/recommended_items"
                app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:fontFamily="@font/kodchasan"
                android:text="See all"
                android:textColor="#2FA090"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.461" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@id/textView2"
                app:layout_constraintHorizontal_bias="0.136"
                app:layout_constraintStart_toStartOf="@id/textView2"
                app:layout_constraintTop_toBottomOf="@id/textView2"
                tools:listitem="@layout/trending_deals" />

            <GridLayout
                android:id="@+id/gdl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:padding="14dp"
                android:rowCount="2"
                app:layout_constraintEnd_toEndOf="@id/rc1"
                app:layout_constraintStart_toStartOf="@+id/rc1"
                app:layout_constraintTop_toBottomOf="@+id/rc1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/crdv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="15dp">

                    <View
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/Red" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/most"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/most1"
                        android:layout_width="79dp"
                        android:layout_height="72dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/kodchasan"
                        android:text="Most Populer Items"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/trending_up" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="15dp">

                    <View
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/Red" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/fl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/Flas2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/kodchasan"
                        android:text="Flash Sale"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/sale" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Combo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="15dp">

                    <View
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/Red" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/Com"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/Combo1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/kodchasan"
                        android:text="Combo Offers only for YOU"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/offer" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/All"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="15dp">

                    <View
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/Red" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/All_cate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/All_cat"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/kodchasan"
                        android:text="All Categories"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="80dp"
                        android:src="@drawable/categories" />

                </androidx.cardview.widget.CardView>

            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>